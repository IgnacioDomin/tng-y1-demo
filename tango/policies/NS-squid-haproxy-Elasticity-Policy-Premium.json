{
  "descriptor_schema": "https://raw.githubusercontent.com/sonata-nfv/tng-schema/master/policy-descriptor/policy-schema.yml",
  "name": "NS-squid-haproxy-Elasticity-Policy-Premium1",
  "vendor": "eu.5gtango",
  "version": "0.1",
  "network_service": {
    "vendor": "eu.5gtango",
    "name": "NS-squid-haproxy",
    "version": "0.1"
  },
  "monitoring_rules": [
    {
      "name": "mon_rule:vnf:squid-vnf:vdu:vdu01:cpu_util",
      "description": "Trigger events if CPU load of squid is above 50 percent.",
      "duration": 20,
      "duration_unit": "s",
      "condition": "cpu_util",
      "threshold": "> 50"
    },
    {
      "name": "mon_rule:vnf:haproxy-vnf:vdu:vdu01:haproxy_frontend_scur",
      "description": "Trigger events if haproxy frontend session are 10.",
      "duration": 20,
      "duration_unit": "s",
      "condition": "haproxy_frontend_scur",
      "threshold": " > 10"
    }
  ],
  "policyRules": [
    {
      "name": "ElasticityRule",
      "salience": 1,
      "inertia": {
        "value": 30,
        "duration_unit": "m"
      },
      "conditions": {
        "condition": "OR",
        "rules": [
          {
            "id": "squid-vnf.LogMetric",
            "field": "squid-vnf.LogMetric",
            "type": "string",
            "input": "text",
            "operator": "equal",
            "value": "mon_rule_vnf_squid_vnf_vdu_vdu01_cpu_util"
          },
          {
            "id": "haproxy-vnf.LogMetric",
            "field": "haproxy-vnf.LogMetric",
            "type": "string",
            "input": "text",
            "operator": "equal",
            "value": "mon_rule_vnf_haproxy_vnf_vdu_vdu01_haproxy_frontend_scur"
          }
        ]
      },
      "actions": [
        {
          "action_object": "ElasticityAction",
          "action_type": "ScalingType",
          "name": "addvnf",
          "value": "1",
          "criterion":"random",
          "target": {  "name": "squid-vnf",
            "vendor": "eu.5gtango",
            "version": "0.1"}
        }
      ]
    }
  ]
}